@model TechCareerActivityProject.DAL.Models.Home
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section header
{
    @await Html.PartialAsync("_header")
}


<section id="maincontent">
    <div class="container">
        <div class="row">
            <div class="span4">
                <h2>..</h2>
                <aside>
                    <div class="widget">
                        <h4 class="rheading">Öne Çıkanlar<span></span></h4>

                        @await Component.InvokeAsync("Genres")
                      
                    </div>
                </aside>
            </div>

            <div class="span8">
                <h2>Konser Listesi</h2>
                <div id="concerts">
                    @foreach (var item in Model.ConcertList)
                    {
                        <div class="concert">
                            <img src="~/lumia/assets/img/dummies/concert/@item.ConcertImage" alt="@item.ConcertType" width="200" height="250" />
                            <p>@item.ConcertName</p>
                            <p>@item.ConcertDescription</p>
                            <p>@item.ConcertTime</p>
                            <p>@item.ConcertLocation</p>
                            <p><a class="btn btn-primary" href="/Concert/Details/@item.Id">Detaylar</a></p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>


